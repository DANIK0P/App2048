    </GridLayout>

    <LinearLayout
        android:id="@+id/scoreLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gameName"
        android:layout_marginStart="24dp"
        android:layout_marginTop="72dp"
        android:layout_toStartOf="@id/highScoreLayout"
        android:background="@color/middle_bg"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/gameName"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/scoreNameTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/score"
            android:textColor="@color/text_2048"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/text_2048"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/highScoreLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gameName"
        android:layout_alignEnd="@id/scoreLayout"
        android:layout_marginStart="20dp"
        android:layout_marginTop="72dp"
        android:background="@color/middle_bg"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/scoreLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/highScoreNameTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/high_score"
            android:textColor="@color/text_2048"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="295dp"
            tools:layout_editor_absoluteY="72dp" />

        <TextView
            android:id="@+id/highScoreTextView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/black"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="45dp"
        android:background="@color/black"
        android:backgroundTint="@color/dark_bg"
        android:contentDescription="@string/_2048"
        android:onClick="btnClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highScoreLayout"
        app:srcCompat="@android:drawable/stat_notify_sync" />


